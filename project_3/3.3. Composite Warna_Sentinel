var sentinel2 = ee.Image('COPERNICUS/S2_SR_HARMONIZED/20200727T023549_20200727T025129_T49MDM')
.clip(ngaglik)
var FC = sentinel2.select (['B8', 'B4', 'B3'])
.clip(ngaglik);
// Map.addLayer(FC, {}, 'FCV');
Map.addLayer(FC, paramsentinel_fc, 'FCV');

